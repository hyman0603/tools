@import '/components/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 50rpx;
}

.miniappinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.appform {
  margin-top: 50px;
}

.input-search {
  padding-left: 10rpx;
}

.index-logo {
  width: 320rpx;
  height: 300rpx;
}

.index-desc {

  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

.index-desc2 {
  color: #0946f0;
  font-size: 28rpx;
}

.batchArea {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #888888;
  display: flex;
}

.easter_egg {
  height: 30rpx;
  font-size: 14px;
}

.list {
  padding: 20rpx;
  font-size: 28rpx;
}

.result-warning {
  border: 1rpx solid #aaa;
  border-radius: 5rpx;
  padding: 20rpx;
  margin: 20rpx;
  font-size: 28rpx;
  background-color: #EC7063;
}

.odd {
  background-color: #FDEBD0;
}

.even {
  background-color: #D4EFDF;
}

.result-title {
  padding: 20rpx;
  font-size: 32rpx;
}

.result-item {
  border: 1rpx solid #aaa;
  border-radius: 5rpx;
}

.weui-form-preview__value {
  color: #000;
}

.more {
  text-align: right;
  border-top: 1rpx solid #aaa;
  padding: 10rpx;
  padding-right: 20rpx;
}